<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="300dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/pmi_dialog_img"
        android:src="@drawable/pmi_sample"
        android:layout_width="match_parent"
        android:layout_height="181dp" />

    <TextView
        android:id="@+id/pmi_dialog_name"
        android:textColor="@color/steelGrey"
        android:textSize="24dp"
        android:textStyle="bold"
        android:paddingTop="12dp"
        android:gravity="center"
        android:text="PMI NAME"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/pmi_dialog_address"
        android:gravity="center"
        android:text="pmi alamat nya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="32dp"
        android:gravity="center_horizontal"
        android:weightSum="4"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginHorizontal="11dp"
            android:paddingBottom="2dp"
            android:weightSum="3"
            android:background="@drawable/outline_rounded"
            android:orientation="vertical"
            android:layout_width="34dp"

            android:layout_height="39dp">

            <TextView
                android:layout_weight="1.5"
                android:gravity="center"
                android:textColor="@color/calmWhite"
                android:textStyle="bold"
                android:text="A"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/pmi_dialog_blood_a"
                android:layout_weight="1.5"
                android:gravity="center_horizontal"
                android:text="100"
                android:layout_marginHorizontal="1dp"
                android:background="@drawable/outline_rounded_basic"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginHorizontal="11dp"
            android:paddingBottom="2dp"
            android:weightSum="3"
            android:background="@drawable/outline_rounded"
            android:orientation="vertical"
            android:layout_width="34dp"
            android:layout_height="39dp">

            <TextView
                android:layout_weight="1.5"
                android:gravity="center"
                android:textColor="@color/calmWhite"
                android:textStyle="bold"
                android:text="B"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/pmi_dialog_blood_b"
                android:layout_weight="1.5"
                android:gravity="center_horizontal"
                android:text="100"
                android:layout_marginHorizontal="1dp"
                android:background="@drawable/outline_rounded_basic"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginHorizontal="11dp"
            android:paddingBottom="2dp"
            android:weightSum="3"
            android:background="@drawable/outline_rounded"
            android:orientation="vertical"
            android:layout_width="34dp"
            android:layout_height="39dp">

            <TextView
                android:layout_weight="1.5"
                android:gravity="center"
                android:textColor="@color/calmWhite"
                android:textStyle="bold"
                android:text="O"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/pmi_dialog_blood_o"
                android:layout_weight="1.5"
                android:gravity="center_horizontal"
                android:text="100"
                android:layout_marginHorizontal="1dp"
                android:background="@drawable/outline_rounded_basic"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginHorizontal="11dp"
            android:paddingBottom="2dp"
            android:weightSum="3"
            android:background="@drawable/outline_rounded"
            android:orientation="vertical"
            android:layout_width="34dp"
            android:layout_height="39dp">

            <TextView
                android:layout_weight="1.5"
                android:gravity="center"
                android:textColor="@color/calmWhite"
                android:textStyle="bold"
                android:text="AB"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/pmi_dialog_blood_ab"
                android:layout_weight="1.5"
                android:gravity="center_horizontal"
                android:text="100"
                android:layout_marginHorizontal="1dp"
                android:background="@drawable/outline_rounded_basic"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/pmi_dialog_btn"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:textColor="@color/calmWhite"
        android:text="DIRECTION"
        android:background="@drawable/btn_rounded"
        android:layout_width="wrap_content"
        android:layout_height="30dp" />

</LinearLayout>